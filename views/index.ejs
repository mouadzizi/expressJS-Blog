<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="main-wrapper">
      <section class="cta-section theme-bg-light py-5">
        <div class="container text-center">
          <h2 class="heading">NodeJS, ExpressJS, ESJ, MongoDB Blog test</h2>
          <div class="intro">
            Welcome to my blog. Subscribe and get my latest blog post in your
            inbox or maybe not.
          </div>
          <form class="signup-form form-inline justify-content-center pt-3">
            <div class="form-group">
              <label class="sr-only" for="semail">Your email</label>
              <input
                type="email"
                id="semail"
                name="semail1"
                class="form-control mr-md-1 semail"
                placeholder="Enter email"
              />
            </div>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>
        </div>
        <!--//container-->
      </section>

      <section class="blog-list px-3 py-5 p-md-5">
        <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
        <div class="container">
          <!--//item-->
          <div class="item mb-5">
            <div class="media">
              <img
                class="mr-3 img-fluid post-thumb d-none d-md-flex"
                src="/react.jpg"
                alt="image"
              />
              <div class="media-body">
                <h3 class="title mb-1">
                  <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                </h3>
                <div class="meta mb-1">
                  <span class="date">Published 2 months ago</span
                  ><span class="time">15 min read</span
                  ><span class="comment"><a href="#">3 comments</a></span>
                </div>
                <div class="intro"><%= blog.snippet %></div>
                <a class="more-link" href="/blogs/<%= blog._id %>"
                  >Read more &rarr;</a
                >
              </div>
            </div>
            <!--//media-->
          </div>
          <!--//item-->
        </div>
        <% }) %> <% } else { %>
        <p>There are no blogs to display...</p>
        <% } %>
      </section>
    </div>
    <%- include('./partials/footer.ejs') %>

    <!-- Javascript -->
    <script src="assets/plugins/jquery-3.3.1.min.js"></script>
    <script src="assets/plugins/popper.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
