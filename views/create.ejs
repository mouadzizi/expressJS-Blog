<%- include("./partials/head.ejs") %>

<body>

  <div class="container">
    <form class="blog-form" action="/blogs" method="POST">
      <h2 class="form-title">Add a New Blog</h2>

      <div class="form-group">
        <label for="title">Blog Title</label>
        <input type="text" id="title" name="title" class="form-control" placeholder="Enter the title" required />
      </div>

      <div class="form-group">
        <label for="snippet">Blog Snippet</label>
        <input type="text" id="snippet" name="snippet" class="form-control" placeholder="Enter a short snippet" required />
      </div>

      <div class="form-group">
        <label for="body">Blog Body</label>
        <textarea id="body" name="body" class="form-control" placeholder="Write your blog post" required></textarea>
      </div>

      <button class="btn btn-primary">Submit</button>
    </form>
  </div>

  <%- include('./partials/footer.ejs') %>

</body>

</html>
